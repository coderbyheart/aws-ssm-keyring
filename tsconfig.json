{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "strictNullChecks": false,
        "removeComments": false,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist/",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "node"
        ],
        "lib": [
            "es2016",
            "dom",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}
